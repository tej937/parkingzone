<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:background="@color/Black"
    tools:context=".ParkingLot">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_layout">
        <!--    Action Bar-->
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/action">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Parking"
            android:textColor="@color/White"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:padding="13sp"/>
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:padding="13sp"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/action"
            android:id="@+id/layout_details">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="19sp"
            android:textColor="#ff3366"
            android:padding="10dp"
            android:id="@+id/username"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:text="On Ground Parking"
                android:textColor="#ff3366"
                android:textSize="19sp" />
    </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/layout_details">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selected_parking"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="#6a6363"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/paid_parking"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="#10cc49"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/booked_parking"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserved"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="#fc2a2a"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/slots_layout" />
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:backgroundTint="#000033"
                android:id="@+id/card_view_scroll"
                app:cardElevation="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back"
                        android:rotation="90"
                        android:padding="10dp"
                        android:id="@+id/drag"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lot Name"
                        android:textColor="@color/White"
                        android:textSize="18sp"
                        android:layout_toEndOf="@id/drag"
                        android:padding="10dp"
                        android:id="@+id/lot_name"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. Selected"
                        android:textSize="15sp"
                        android:textColor="#ff3366"
                        android:layout_toEndOf="@id/drag"
                        android:layout_below="@id/lot_name"
                        android:id="@+id/seat_no"
                        android:padding="7dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cost for \n30 mins : 10rs"
                        android:textSize="17sp"
                        android:padding="10dp"
                        android:textColor="@color/White"
                        android:layout_alignParentEnd="true"
                        />
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/roundbutton"
                        android:backgroundTint="#FF3366"
                        android:textColor="@color/White"
                        android:text="Book"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:id="@+id/book"
                        android:layout_below="@id/seat_no"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>